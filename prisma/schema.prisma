generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Question {
  id        Int      @id @default(autoincrement())
  word      String   // 四字熟語
  meaning   String   // 意味
  blank     Int      // 空欄の位置（0-3）
  answer    String   // 正解の文字
  hint      String   // ヒント
  difficulty String  @default("normal") // 難易度: easy, normal, hard
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([difficulty])
}
